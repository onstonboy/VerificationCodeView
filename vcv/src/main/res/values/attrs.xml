        <attr name="vcv_inputHeight" format="dimension"/>
        <attr name="vcv_radius" format="dimension"/>
        <attr name="vcv_inputCount" format="integer"/>
        <attr name="vcv_lineColor" format="color"/>
        <attr name="vcv_lineActiveColor" format="color"/>
        <attr name="vcv_cursorColor" format="color"/>
        <attr name="vcv_textColor" format="color"/>
        <attr name="vcv_textSize" format="dimension"/>
        <attr name="vcv_lineHeight" format="dimension"/>
        <attr name="vcv_strokeSize" format="dimension"/>
